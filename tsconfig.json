{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext", // Use ESNext for top-level await support
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true
    // Other options...
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "assets": [
    "src/**/*.sql",
    "src/**/*.json"
  ]
}